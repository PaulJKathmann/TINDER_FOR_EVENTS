.picture-name-container{
  background-color: white;
  // Dynamically Compile Stylesheets with Rails and Sass
  border-radius: 3px;

}


.background_show {
  position: fixed;
  top: 0;
  left:0;
  right:0;
  bottom: 0;
  z-index: 1;
  height: 100%;
  width: 100%;
}

.lighter_background_show {
  position: absolute;
  top: 0;
  z-index: 1;
  height: 100%;
  width: 100%;
  background-color: white;
  opacity: .15;
}
.event-img {
  position: absolute;
  z-index: 2;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  top: 30px;
  padding: 4px 2px;
  height: 60px;
  width: 60px;
  object-fit: fill;
}
.swipe_card {
  position: relative;
  width: 100%;
  height: 520px;
  border-radius: 8px;
  background-color: white;
  margin-top: 90px;
  z-index: 2;
}

.main-picture{
  position: relative;
  margin-top: 60px;
  text-align: center;
}


.user-pictures{
 width: 100%;
 height: 400px;
 border-top-left-radius: 8px;
 border-top-right-radius: 8px;
 object-fit: cover;
 margin: auto;
}
.name-age{
  margin: 20px;
  margin-bottom: 0;
  font-size: 26px;
  display: flex;
  justify-content: space-between;
}

.bnt_love_show{
  z-index: 2;
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background-color: white;
  position:relative;
}

.buttons-box{
  display: flex;
  justify-content: space-between;
  margin-top: 40px;

}
#reject-btn{
  z-index: 4;
  font-size: 58px;
  top: 6px;
  position: absolute;
  left: 15px;
}

#accept-btn{
  z-index: 4;
