<%= simple_form_for message, html: { class: "row d-inline-flex" }, remote: true, authenticity_token: true do |f| %>
  <%= f.text_area :content, class: "mr-2", data: {textarea: "message"} %>
  <%= f.hidden_field :match_id, value: match.id %>
  <%= f.submit 'send', class: "btn btn-primary", data: {send: "message"} %>
<% end %>

