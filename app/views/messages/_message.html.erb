

<section id="chat-box" class="clearfix">
    <ul class="messages clearfix" style="padding-left:10px;padding-right: 10px;">
      <% if user_is_messages_author %>
        <li class="messages_1" style="
            display: block;
            position: relative;
            float: right;
            background: #a6acba;
            border: 4px solid transparent;
            border-radius: 8px;
            padding: 5px;
            max-width: 300px;
            color: #fff;">
            <p style="word-wrap:break-word;
            margin-bottom:0px;
            margin-top:-3px;">
            <%= message.content %></p>
            <p style="
            font-size:10px;
            text-align: end;
            margin-bottom: -6px;
            opacity: 0.5;"><%= message.created_at.strftime("%I:%M %p")%></p></li>
     <% else%>
       <div class="d-inline-flex">
       <%= image_tag message.author.pictures.first.url, class: "avatar" %>
       <li class="messages_2 ml-1" style="
            display: block;
            position: relative;
            float: left;
            background: #fff;
            border-radius: 8px;
            max-width: 300px;
            padding: 5px;
            color: #a6acba;">
           <p style ="word-wrap:break-word;
            margin-bottom:0px;
            margin-top:0px;">
             <%= message.content %></p>
           <p style="
            font-size:10px;
            text-align: end;
            margin-bottom: -6px;
            opacity: 0.7;"><%= message.created_at.strftime("%I:%M %p")%></p></li>
        </div>
     <% end %>
  </ul>
</section>

