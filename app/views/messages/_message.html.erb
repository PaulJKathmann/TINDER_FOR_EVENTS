

<section id="chat-box" class="clearfix">
    <ul class="messages clearfix py-0 mb-0" style="padding-left:10px;padding-right: 10px;">
      <% if user_is_messages_author %>
        <li class="message" style="
            margin-top:3px;
            display: block;
            position: relative;
            float: right;
            background: #4C4C4C;
            border: 4px solid transparent;
            border-radius: 8px;
            padding: 8px;
            max-width: 300px;
            color: #fff;
            list-style-type: none;">
            <p style="word-wrap:break-word;
            margin-bottom:0px;
            margin-top:0px;
            font-size: 18px">
            <%= message.content %></p>
            <p style="
            font-size:10px;
            text-align: end;
            margin-bottom:-6px;
            opacity: 0.7;
            "><%= message.created_at.strftime("%I:%M %p")%></p></li>
     <% else%>
       <div class="d-inline-flex">
       <%= cl_image_tag message.author.pictures.first.url, class: "avatar" %>
       <li class="message ml-1" style="
            display: block;
            position: relative;
            float: left;
            background: #fff;
            border-radius: 8px;
            max-width: 300px;
            padding: 8px;
            color: #4C4C4C;
            list-style-type: none;">
           <p style ="word-wrap:break-word;
            margin-bottom:0px;
            margin-top:-3px;
            font-size: 18px">
             <%= message.content %></p>
           <p style="
            font-size:10px;
            text-align: end;
            margin-bottom: -6px;
            opacity: 0.7;
             "><%= message.created_at.strftime("%I:%M %p")%></p></li>
        </div>
     <% end %>
  </ul>
</section>

