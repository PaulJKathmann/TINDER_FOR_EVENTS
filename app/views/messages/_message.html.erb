
<section id="chat-box" class="clearfix">
    <ul class="messages clearfix" style="padding-left:10px;    padding-right: 10px;">
      <% if message.author == current_user %>
        <li class="messages" style="
            display: block;
            position: relative;
            float: right;
            background: #a6acba;
            border: 4px solid transparent;
            border-radius: 8px;
            padding: 5px;
            max-width: 80px;
            color: #fff;
            margin-bottom: 8px;">
            <%= message.content %></li>
     <% else%>
       <div class="d-inline-flex">
       <%= image_tag message.author.pictures.first.url, class: "avatar" %>
       <li class="messages ml-1" style="
            display: block;
            position: relative;
            float: left;
            background: #fff;
            border-radius: 8px;
            max-width: 80px;
            padding: 5px;
            color: #a6acba;
            margin-bottom: 8px;">
           <%= message.content %></li>
        </div>
     <% end %>
  </ul>
</section>







