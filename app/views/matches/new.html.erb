 <%= render 'shared/navbar_mobile' %>
 <%= cl_image_tag("fusion_logo2019_spskle", style: "
    position: absolute;
    z-index: 2;
    left: 0;
    right: 0;
    margin-left: auto;
    margin-right: auto;
    top: 30px;
    padding: 4px 2px;
    height: 60px;
    width: 60px;
    object-fit: fill;
  " )%>
 <div class="container" style="height: 100vh; background: rgb(100,100,100);">
  <div class="d-flex justify-content-around align-item-center" style="padding-top: 125px;">
   <div class="card" style="width: 70vh;height: 60vh;" >
     <div class="card-body pt-3">
      <div class = "d-flex justify-content-around align-item-center">
        <i class="fa fa-smile text-center" style="font-size: 48px;color: orange;"></i>
      </div>
      <h5 class="match_card-title">BOOM!</h5>
      <p class="card-text text-center">You both swiped each other. <br>You are connected!</p>

      <div class = "d-flex justify-content-around align-item-center">
        <% if @match.swipe.participant_1.user.pictures.empty? %>
          <img src="http://autozentrum-west.at/wp-content/uploads/2015/10/avatar-placeholder-300x300.png" alt="Default avatar" class="mobile_avatar">
        <% else %>
          <img src="<%= @match.swipe.participant_1.user.pictures[0].url %>" alt="" class="mobile_avatar">
        <% end %>
        <% if @match.swipe.participant_2.user.pictures.empty? %>
          <img src="http://autozentrum-west.at/wp-content/uploads/2015/10/avatar-placeholder-300x300.png" alt="Default avatar" class="mobile_avatar">
        <% else %>
          <img src="<%= @match.swipe.participant_2.user.pictures[0].url %>" alt="" class="mobile_avatar">
        <% end %>
      </div>
      <%= link_to matches_path do %>
        <button class="btn btn-warning btn-sm btn-block mt-5">Send a Message</button>
      <% end %>
      <%= link_to new_swipe_path(@match.swipe.participant_2.event) do %>
        <button class="btn btn-outline-warning btn-sm btn-block mt-3">Keep Swiping</button>
      <% end %>
      </div>

    </div>
  </div>
 </div>
