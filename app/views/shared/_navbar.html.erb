
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="z-index: 2;">
  <%= link_to root_path, class: "navbar-brand ml-3" do %>
    <%= cl_image_tag("logo_transparent_mnzt9b.png") %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "Create event", projects_new_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item mr-2">
          <%= link_to "My Projects", projects_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown mr-3">
           <% if current_user.pictures.empty? %>
             <%= image_tag "http://autozentrum-west.at/wp-content/uploads/2015/10/avatar-placeholder-300x300.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, style: "width: 40px; height: 40px; object-fit: cover;" %>
           <% else %>
             <%= image_tag current_user.pictures[0].url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, style: "width: 40px; height: 40px; object-fit: cover;" %>
           <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Settings", "profile", class: "dropdown-item" %>
            <%= link_to "Go swiping", '/participant', class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
