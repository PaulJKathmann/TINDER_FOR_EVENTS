  <%= render 'shared/navbar_mobile' %>
  <div class="background_show show_primary" style="
      position: fixed;
      top: 0;
      left:0;
      right:0;
      bottom: 0;
      z-index: 1;
      height: 100%;
      width: 100%;
      background-color: #333333;
    ">
  </div>
  <div class="lighter_background_show" style="
        position: absolute;
        top: 0;
        z-index: 1;
        height: 100%;
        width: 100%;
        background-color: white;
        opacity: .2;
    "></div>

  <%= cl_image_tag("fusion_logo2019_spskle", style: "
    position: absolute;
    z-index: 2;
    left: 0;
    right: 0;
    margin-left: auto;
    margin-right: auto;
    top: 30px;
    padding: 4px 2px;
    height: 60px;
    width: 60px;
    object-fit: fill;
  " )%>

<div style="position: relative; width: 90%; height: 520px; margin: auto; border-radius: 8px; background-color: white; margin-top: 90px; z-index: 2;">
  <div class="main-picture" style="position: relative; margin-top: 80px; text-align: center;">
    <% if @swipe.participant_2.user.id == current_user.id %>
      <% user_show = @swipe.participant_1.user %>
    <% else %>
      <% user_show = @swipe.participant_2.user %>
    <% end %>
    <% if user_show.pictures.empty? %>
      <img src="http://autozentrum-west.at/wp-content/uploads/2015/10/avatar-placeholder-300x300.png" alt="Default avatar" style="width: 100%; height: 400px; border-top-left-radius: 8px;
        border-top-right-radius: 8px; object-fit: cover; margin: auto;">
    <% else %>
      <img src="<%= user_show.pictures[0].url %>" alt="" style="width: 100%; height: 400px; border-top-left-radius: 8px; border-top-right-radius: 8px; object-fit: cover; margin: auto;">
    <% end %>
    <div class="name-age" style="margin: 20px; margin-bottom: 0;font-size: 26px;">
      <p ><%= user_show.name %></p>
      <p><%= user_show.age %></p>
    </div>
  </div>

  <div class="desc-pictures" style="margin-left: 20px;">
    <div class="description">
      <p><%= user_show.bio %></p>
    </div>
