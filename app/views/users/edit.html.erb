<div class="background">
  <div class="phone-container p-3 profile-content" style="margin: auto;">
    <h1 class="text-center">Your Profile</h1>
    <div class="text-center">
      <% if current_user.pictures.empty? %>
            <%= image_tag "http://autozentrum-west.at/wp-content/uploads/2015/10/avatar-placeholder-300x300.png", class: "profile-picture" %>
        <% else %>
            <%= cl_image_tag current_user.pictures[0].url, class: "profile-picture" %>
       <% end %>
    </div>
    <div class="row justify-content-around">
      <div class="box">
        <div class="js--image-preview"></div>
        <div class="upload-options" style="background-color:<%= @event.secondary_color %>">
          <label class="text-center">
            <i class="fas fa-camera">
              <input type="file" class="image-upload" accept="image/*" />
            </i>
          </label>
        </div>
      </div>

      <div class="box">
        <div class="js--image-preview"></div>
