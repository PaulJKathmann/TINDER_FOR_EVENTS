<%= render 'shared/navbar' %>
<div style="position: fixed; top: 0; width: 100%; height:100%; background-color: #1c2938; z-index: 1;"></div>
<br>
<br>
<br>
<div style="position: relative; z-index: 2; width: 700px; margin: 20px auto; margin-bottom: 40px;">
  <h1 style="color: white;">Your Events</h1>
  <% @participations.each do |participator| %>
    <% event = participator.event %>
    <%= link_to event_path(event), class: "index-list-event" do %>
    <div style="
      margin-top: 30px;
      position: relative;
      <% unless event == @participations.last.event %>
        border-bottom: 2px solid rgba(180,180,180,.6);
      <% end %>
    ">
      <h2 style="color: white;"><%= event.name %></h2>
      <p style="color: rgb(180,180,180);">From <span style="color: white;"><%= event.start_date.strftime('%a %d %b %Y') %></span> to <span style="color: white;"><%= event.end_date.strftime('%a %d %b %Y') %></span></p>
      <%= cl_image_tag event.logo, style: "
        position: absolute;
        right: 20px;
        top: 0;
        padding: 4px 2px;
        height: 60px;
        width: 60px;
        object-fit: fill;
      "%>
      <div style="
        position: absolute;
        right: 20px;
        top: 0;
        padding: 4px 2px;
        height: 60px;
        width: 60px;
        border-radius: 50%;
        background-color: rgba(245,245,245,.6);
        z-index: -1;
      "></div>
    </div>
    <% end %>
  <% end %>
</div>
